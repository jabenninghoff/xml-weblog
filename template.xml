<!-- XML weblog template/test page -->

<!-- page: defines a single weblog "page" -->
<page>
    <!-- (HTML) title -->
    <title>page.title (generated)</title>

    <!-- header: top of the page, with logo, slogan, etc.  -->
    <header>
        <name>site.name</name>
        <slogan>site.slogan</slogan>
        <logo>site.logo (image)</logo>
        <!-- zero or more blocks -->
        <block weight="0">
            <id>block.id</id>
            <language>block.language</language>
            <title>block.title</title>
            <content>block.content (XHMTL)</content>
        </block> 
    </header>

    <!-- footer: bottom of page, includes disclaimer -->
    <footer>
        <disclaimer>site.disclaimer</disclaimer>
        <!-- zero or more blocks -->
        <block weight="0">
            <id>block.id</id>
            <language>block.language</language>
            <title>block.title</title>
            <content>block.content (XHMTL)</content>
        </block> 
    </footer>

    <!--
        sidebar: either left- or right-aligned. contains 0 or more blocks.
          multiple sidebars are allowed, however, normally there is only one
          left and one right sidebar.
     -->
    <sidebar align="left">

        <!--
        block: a block of text in the header, footer, or sidebar. May be static
            or dynamic content (implemented on the back-end)
    
        attributes:
    
          weight: for determining placement on page. normally lower weighted
              blocks appear at the top of the page, however, may appear in any
              order in the XML document.
        -->
        <block weight="0">
            <id>block.id</id>
            <language>block.language</language>
    	<!-- block title: name of block -->
            <title>block.title</title>
    	<!-- block content -->
            <content>block.content (XHMTL)</content>
        </block>

        <block weight="1">
            <id>block.id</id>
            <language>block.language</language>
    	<!-- block title: name of block -->
            <title>block.title</title>
    	<!-- block content -->
            <content>block.content (XHMTL)</content>
        </block>

        <!-- ... additional blocks ... -->

    </sidebar>

    <!-- main: main section of document. index page contains articles. -->
    <main>
        <!-- 0 or more articles, default 10 most recent -->
        <!-- article: -->
        <article weight="0">
            <!-- metadata -->
            <id>article.id</id>
            <topic>article.topic</topic>
            <language>article.language</language>
            <url>article.url</url>

            <!-- "header" info -->
            <title>article.title</title>
            <author>article.author</author>
            <date>article.date</date>

            <!-- actual content -->
            <content>article.content (XHMTL)</content>
        </article>
    </main>

</page>
