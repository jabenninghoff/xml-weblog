<!-- XML weblog template/test page -->

<!-- page: defines a single weblog "page" -->
<page>

    <!-- header: top of the page -->
    <header>header goes here</header>

    <!-- footer: bottom of page -->
    <footer>footer goes here</footer>

    <!--
    block: basic unit of weblog. a block of space in left or right sidebar, or
    in the main page area.

    attributes:

      weight: for determining placement on page. normally lower weighted blocks
      appear at the top of the page, however may appear in any order in XML document.

      class: left, right or main. Location of block in sidebar or in main section.
    -->
    <block weight="0" class="left">

	<!-- block title: name of block -->
        <title>#PCDATA title goes here</title>

	<!-- block content -->
        <content>content goes here</content>

    </block>

    <!-- main block(s). Usually a single block; index page displays stories -->
    <block class="main">
        <title>home</title>

        <!-- content: -->
        <content object="" />

    </block>

</page>
