<!-- entity stuff to help brevity/clarity -->
<!ENTITY  %          text.content '#PCDATA'>
<!ENTITY  %          att.content  'CDATA'>

<!-- main elements, basic structure -->
<!ELEMENT blog       (post)>
<!ELEMENT post       (title?, text, poster, date, comments?)>
<!ATTLIST post       id ID #REQUIRED>

<!-- post elements -->
<!ELEMENT title      (%text.content;)*>
<!ELEMENT text       (%text.content;)*>
<!ELEMENT poster     (%text.content;)*>
<!ELEMENT date       (%text.content;)*>
<!ATTLIST poster     nick  %att.content; #IMPLIED
                     email %att.content; #IMPLIED >

<!-- comment elements, totally optional -->
<!ELEMENT comments   (comment)>
<!ELEMENT comment    (ctext, cdate, cposter)>
<!ELEMENT ctext      (%text.content;)*>
<!ELEMENT cwhen      (%text.content;)*>
<!ELEMENT cwho       (%text.content;)*>
<!ATTLIST comment    id ID #REQUIRED>
<!ATTLIST cwho       url   %att.content; #IMPLIED
                     nick  %att.content; #IMPLIED
                     email %att.content; #IMPLIED > 


